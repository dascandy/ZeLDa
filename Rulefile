

(.*)\.c => obj/\1.o obj/\1.d
  g++ -c -o $@ $^ -MMD -std=c++14
(.*)\.cpp => obj/\1.o obj/\1.d
  g++ -c -o $@ $^ -MMD -std=c++14

obj/src/.*\.o => bin/zelda
  g++ -o $@ $^

obj/test/.*\.o [bin/zelda] => bin/test/hello.elf
  bin/zelda -o $@ $^

bin/test/hello.elf => all

depfiles obj/.*\.d
generated obj/.*

